<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/row_icon"
    android:layout_width="50dip"
    android:layout_height="50dip"
    android:layout_alignParentRight="true">       
    </ImageView>
    <TextView
        android:id="@+id/row_date"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/row_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_date"
        android:layout_toLeftOf="@+id/row_icon"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="right" />
     <TextView
        android:id="@+id/row_origin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_price"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="right" />
     <TextView
        android:id="@+id/row_destination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_origin"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="right" />
     <TextView
        android:id="@+id/row_km"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_destination"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="right" />

</RelativeLayout>